<Page
    x:Class="QR_Saga.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QR_Saga"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="200"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Black">
            <CaptureElement x:Name="captureElement" SizeChanged="captureElement_SizeChanged"  Stretch="UniformToFill" />
            <Image Canvas.ZIndex="5" Source="Assets/crosshairs-red2.png" HorizontalAlignment="Center" VerticalAlignment="Center" MaxHeight="100" MaxWidth="100" />
        </Grid>
        <Grid Grid.Row="1">
            <SplitView IsPaneOpen="False" DisplayMode="Inline" Name="splitView">
                <SplitView.Pane>
                    <ListView x:Name="vlog1" />
                </SplitView.Pane>
                <ListView x:Name="listView1" IsItemClickEnabled="True" ItemClick="listView1_ItemClick" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <local:Scan Text="Dev Item 1 This long text needs to wrap so blah blah blah blah blah 123 zerglings blah tomato and something else bike cow morty portal space"/>
                    <local:Scan Text="Dev Item 2"/>
                </ListView>
            </SplitView>
        </Grid>
        <Grid Grid.Row="2">
            <CommandBar >
                <AppBarButton Icon="List" Label="Toggle Log" Click="TogglePanel_Click"/>
                <AppBarToggleButton Name="ToggleHighResolution" Icon="FontSize" Label="Toggle High Resolution" Click="ToggleHighResolution_Click"/>
                <AppBarToggleButton Name="ToggleOpenUrl" Icon="SetLockScreen" Label="Toggle Open Url" Click="ToggleOpenUrl_Click" IsChecked="True"/>
                <!--
                <CommandBar.Content>
                    <StackPanel Orientation="Vertical">
                        <ComboBox Name="deviceList1" VerticalAlignment="Stretch"/>
                    </StackPanel>
                </CommandBar.Content>
-->
            </CommandBar>
        </Grid>
    </Grid>
</Page>

<Page
    x:Class="QR_Saga.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QR_Saga"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Black">
            <CaptureElement x:Name="captureElement"/>
            <Image Canvas.ZIndex="5" Source="Assets/crosshairs-red2.png" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <Grid Grid.Row="1">
            <ListView x:Name="listView1" IsItemClickEnabled="True" ItemClick="listView1_ItemClick" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Text}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <local:Scan Text="Dev Item 1"/>
                <local:Scan Text="Dev Item 2"/>
            </ListView>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Vertical">
                <Slider Maximum="255" Minimum="0" ValueChanged="Slider_ValueChanged"/>
                <CommandBar>
                    <AppBarButton Icon="Target" Label="Auto Focus" Click="AppBarButton_Click"/>
                    <AppBarButton Icon="OneBar" Label="Focus 50" Click="AppBarButton_Click_1"/>
                    <AppBarButton Icon="TwoBars" Label="Focus 100" Click="AppBarButton_Click_2"/>
                    <AppBarButton Icon="ThreeBars" Label="Focus 150" Click="AppBarButton_Click_3"/>
                </CommandBar>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
